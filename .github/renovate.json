{
  "extends": ["config:base"],
  "rebaseWhen": "conflicted",
  "commitBody": "[skip-docker]",
  "gitAuthor": "Renovate Bot <bot@renovateapp.com>",
  "semanticCommits": true,
  "semanticPrefix": "chore(dependency)",
  "separateMajorMinor": false,
  "labels": ["dependencies"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "baseBranches": ["main"],
  "packageFiles": [
    "package.json",
    "apps/**/package.json",
    "packages/**/package.json",
    ".github/workflows/**/*.yml"
  ]
}
